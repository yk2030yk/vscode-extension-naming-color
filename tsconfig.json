{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6"],
    "sourceMap": true,
    "rootDir": "src",
    "typeRoots": ["src/types"],
    "types": ["jest"],
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", ".vscode-test", "**/*.test.ts"]
}
